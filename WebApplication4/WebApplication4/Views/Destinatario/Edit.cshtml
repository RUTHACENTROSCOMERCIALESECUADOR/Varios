@model Destinatario

@{
    ViewData["Title"] = "Editar Destinatario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="idDestinatario" />
    <div class="form-group">
        <label>Código</label>
        <input asp-for="codigoDestinatario" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="nombreDestinatario" class="form-control" />
    </div>
    <div class="form-group">
        <label>Correo</label>
        <input asp-for="correoDestinatario" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
